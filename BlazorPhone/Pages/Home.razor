@page "/"
@inherits BlazorPhone.Pages.HomeBase

<div class="keypad-grid">
    @foreach (var key in mKeys)
    {
        <button class="btn btn-primary keypad-button" @onclick="() => HandleClick(key.ToString())">@key</button>
    }
</div>

<div class="pressed-keys">
    <h3>@mPressedKeys</h3>
</div>

<div class="output-word">
    <h3>@mOutputWord</h3>
</div>